<h1>Ask a Question!</h1>

<%= form_for(@question) do |f| %>
  <%= f.label :prompt %>
  <%= f.text_field :prompt %>

  <%= f.label :description %>
  <%= f.text_field :description %>

  <% if current_user %>
    <%= f.hidden_field :user_id, value: current_user.id %>
  <% end %>
  
  <%= f.submit 'Ask Question' %>
<% end %>
